<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeMenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/main"
        android:gravity="center"
        android:text="健康食谱"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_tips"
        android:layout_width="match_parent"
        android:layout_height="230dp" />

    <LinearLayout
        android:id="@+id/ll_tips_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 第一行: 食物图鉴和精选菜单 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"> <!-- 增加行间距 -->

            <LinearLayout
                android:id="@+id/ll_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_menu_food"
                    app:tint="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食物图鉴"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" /> <!-- 增大文字尺寸 -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_menu_menu"
                    app:tint="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精选菜单"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" /> <!-- 增大文字尺寸 -->
            </LinearLayout>
        </LinearLayout>

        <!-- 第二行: 我的菜单和想出去吃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"> <!-- 增加行间距 -->

            <LinearLayout
                android:id="@+id/ll_mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="15dp"> <!-- 增加内边距 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_menu_mine"
                    app:tint="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的菜单"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" /> <!-- 增大文字尺寸 -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"> <!-- 增加内边距 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_menu_about"
                    app:tint="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="想出去吃"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" /> <!-- 增大文字尺寸 -->
            </LinearLayout>
        </LinearLayout>

        <!-- 第三行: 个人中心和关于我们 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"> <!-- 增加行间距 -->

            <LinearLayout
                android:id="@+id/ll_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"> <!-- 增加内边距 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_menu_menu"
                    app:tint="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人中心"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" /> <!-- 增大文字尺寸 -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"> <!-- 增加内边距 -->

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_menu_about"
                    app:tint="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" /> <!-- 增大文字尺寸 -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
